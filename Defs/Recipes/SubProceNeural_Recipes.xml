<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>Install_ChipSubNeural</defName>
    <label>instalar chip de subprocesamiento neural</label>
    <description>Instala un chip de subprocesamiento neural en el cerebro del objetivo.</description>

    <workerClass>Recipe_InstallImplant</workerClass>
    <jobString>Instalando chip de subprocesamiento neural.</jobString>
    <workAmount>2500</workAmount>
    
    <surgerySuccessChanceFactor>1.0</surgerySuccessChanceFactor>
    <deathOnFailedSurgeryChance>0.05</deathOnFailedSurgeryChance>
    
    <skillRequirements>
      <Medicine>8</Medicine>
    </skillRequirements>

    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>

    <addsHediff>ChipSubprocesamientoNeural</addsHediff>

    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChipSubprocesamientoNeural_Item</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
    </ingredients>

    <fixedIngredientFilter>
      <thingDefs>
        <li>ChipSubprocesamientoNeural_Item</li>
      </thingDefs>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>

    <recipeUsers>
      <li>Human</li>
    </recipeUsers>
  </RecipeDef>

  <!-- Recipe de remociÃ³n del chip de subprocesamiento neural -->
  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>Remove_ChipSubNeural</defName>
    <label>remover chip de subprocesamiento neural</label>
    <description>Remueve el chip de subprocesamiento neural del cerebro.</description>
    <workerClass>Recipe_RemoveImplant</workerClass>
    <jobString>Removiendo chip de subprocesamiento neural.</jobString>
    <workAmount>2000</workAmount>
    <skillRequirements>
      <Medicine>7</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <removesHediff>ChipSubprocesamientoNeural</removesHediff>
  </RecipeDef>

</Defs>