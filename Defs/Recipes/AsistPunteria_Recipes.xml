<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
    <defName>Install_ChipAsistentePunteria</defName>
    <label>instalar chip de asistencia de puntería</label>
    <description>Instala un chip de asistencia de puntería que se conecta al nervio óptico y procesa información visual para mejorar la precisión.</description>

    <workerClass>Recipe_InstallImplant</workerClass>
    <jobString>Instalando chip de asistencia de puntería.</jobString>
    <workAmount>2000</workAmount>
    
    <surgerySuccessChanceFactor>0.95</surgerySuccessChanceFactor>
    <deathOnFailedSurgeryChance>0.01</deathOnFailedSurgeryChance>
    
    <skillRequirements>
      <Medicine>6</Medicine>
    </skillRequirements>

    <appliedOnFixedBodyParts>
      <li>Brain</li> <!-- Cambiado de Eye a Brain -->
    </appliedOnFixedBodyParts>

    <addsHediff>ChipAsistentePunteria</addsHediff>

    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChipAsistentePunteria_Item</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>

    <fixedIngredientFilter>
      <thingDefs>
        <li>ChipAsistentePunteria_Item</li>
      </thingDefs>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>

    <recipeUsers>
      <li>Human</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef ParentName="SurgeryRemoveImplantBase">
        <defName>RemoveAsistPunteria</defName>
        <label>remover cip de asistencia de punteria</label>
        <description>Remueve el chip de asistenciade punteria.</description>
        <workerClass>Recipe_RemoveImplant</workerClass>
        <jobString>Removiendo chip de asistencia de punteria.</jobString>
        <workAmount>3000</workAmount>
        <skillRequirements>
            <Medicine>6</Medicine>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>2</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Brain</li>
        </appliedOnFixedBodyParts>
        <removesHediff>ChipAsistentePunteria</removesHediff>
    </RecipeDef>

</Defs>