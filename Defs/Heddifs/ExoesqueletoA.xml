<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>Exoesqueleto_Ataque</defName>
        <label>exoesqueleto de ataque</label>
        <labelNoun>un exoesqueleto de ataque</labelNoun>
        <description>Un exoesqueleto diseñado para un mejor rendimiento en combate. Mejora significativamente las capacidades físicas y de combate del portador.</description>

        <descriptionHyperlinks>
            <ThingDef>ExoesqueletoA_Item</ThingDef>
        </descriptionHyperlinks>

        <hediffClass>Hediff_Implant</hediffClass>
        <defaultLabelColor>(0.8, 0.8, 0.9)</defaultLabelColor>
        <isBad>false</isBad>
        <priceImpact>true</priceImpact>

        <stages>
            <li>
                <!-- Bonos de estadísticas con statOffsets -->
                <statOffsets>
                    <ShootingAccuracyPawn>1.0</ShootingAccuracyPawn> <!-- +1.0 precisión de disparo -->
                    <MeleeDodgeChance>1.0</MeleeDodgeChance> <!-- +1.0 probabilidad de esquivar -->
                </statOffsets>

                <!-- Bonos multiplicadores con statFactors -->
                <statFactors>
                    <MeleeDamageFactor>1.5</MeleeDamageFactor> <!-- 150% de daño (50% más) -->
                    <MoveSpeed>1.10</MoveSpeed> <!-- +10% velocidad de movimiento -->
                </statFactors>

                <!-- Bonos de capacidades -->
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <postFactor>1.10</postFactor> <!-- +10% movimiento -->
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <postFactor>1.05</postFactor> <!-- +5% manipulación -->
                    </li>
                </capMods>
            </li>
        </stages>
        <spawnThingOnRemoved>ExoesqueletoA_Item</spawnThingOnRemoved>
    </HediffDef>

</Defs>