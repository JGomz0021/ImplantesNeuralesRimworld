<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <HediffDef>
        <defName>Exoesqueleto_Ataque</defName>
        <label>Exoesqueleto Ataque</label>
        <description>Un exoesqueleto diseñado para un mejor rendimiento en combate. Mejora significativamente las capacidades físicas y de combate del portador.</description>

        <descriptionHyperlinks>
            <ThingDef>ExoesqueletoA_Item</ThingDef>
        </descriptionHyperlinks>

        <hediffClass>Hediff_Implant</hediffClass>
        <defaultLabelColor>(0.8, 0.8, 0.9)</defaultLabelColor>
        <isBad>false</isBad>
        <priceImpact>true</priceImpact>

        <stages>
            <li>
                <!-- Bonos de estadísticas -->
                <statOffsets>
                    <ShootingAccuracyPawn>1.0</ShootingAccuracyPawn> <!-- +1.0 precisión de disparo -->
                    <MeleeDodgeChance>1.0</MeleeDodgeChance> <!-- +1.0 probabilidad de esquivar -->
                    <MeleeDamageFactor>3.0</MeleeDamageFactor> <!-- +3.0 daño cuerpo a cuerpo -->
                </statOffsets>

                <!-- Bonos de capacidades (en porcentaje) -->
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.10</offset> <!-- +10% movimiento -->
                    </li>
                    <li>
                        <capacity>Manipulation</capacity>
                        <offset>0.05</offset> <!-- +5% manipulación -->
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

</Defs>