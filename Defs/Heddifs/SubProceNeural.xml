<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <HediffDef>
    <defName>ChipSubprocesamientoNeural</defName>
    <label>Subprocesamiento Neural</label>
    <labelNoun>un implante de subprocesamiento neural</labelNoun>
    <description>Implante neural que mejora la capacidad de procesamiento del portador. El aumento de actividad cerebral incrementa el consumo metabólico. En mecanizadores, optimiza la sincronización con mecas.</description>

    <descriptionHyperlinks>
      <ThingDef>ChipSubprocesamientoNeural_Item</ThingDef>
    </descriptionHyperlinks>

    <hediffClass>Hediff_Implant</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.9)</defaultLabelColor>
    <isBad>false</isBad>
    <priceImpact>true</priceImpact>

    <addedPartProps>
      <solid>true</solid>
      <partEfficiency>1.0</partEfficiency>
    </addedPartProps>

    <stages>
      <li>

        <!-- Capacidades -->
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.10</offset> <!-- +10% conciencia -->
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.10</offset> <!-- +10% vista -->
          </li>
        </capMods>

        <!-- Modificador de hambre -->
        <hungerRateFactorOffset>0.15</hungerRateFactorOffset> <!-- +15% tasa de caída de hambre -->

        <!-- Stats -->
        <statOffsets>
          <MechBandwidth>12</MechBandwidth>
          <MechControlGroups MayRequire="Ludeon.RimWorld.Biotech">1</MechControlGroups> <!-- +1 grupo de control de mecas -->
        </statOffsets>

        <statFactors>
          <RestRateMultiplier>1.05</RestRateMultiplier> <!-- +5% tasa de descanso -->
          <MechRepairSpeed MayRequire="Ludeon.RimWorld.Biotech">1.15</MechRepairSpeed> <!-- +15% velocidad de reparación de mecas -->
          <WorkSpeedGlobalOffsetMech MayRequire="Ludeon.RimWorld.Biotech">1.10</WorkSpeedGlobalOffsetMech> <!-- +10% velocidad de trabajo de mecas -->
        </statFactors>

      </li>
    </stages>

    <spawnThingOnRemoved>ChipSubprocesamientoNeural_Item</spawnThingOnRemoved>
  </HediffDef>

</Defs>